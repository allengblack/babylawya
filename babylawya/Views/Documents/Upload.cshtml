@model babylawya.Models.DocumentViewModels.DocumentViewModel;

@{
    ViewData["Title"] = "Create";
}

<h2>Upload new legal documents</h2>


<hr />

<div class="container">
    <form asp-controller="Documents" asp-action="Upload" method="post"
          enctype="multipart/form-data">

        @*<input type="file" name="file" />*@
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Keywords">Enter keywords, separated by a comma</label>
            <input asp-for="@Model.Keywords" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.MyDocument">Upload a document</label>
            <input asp-for="@Model.MyDocument" />
        </div>

        <button type="submit">Upload File</button>
    </form>

</div>

<div class="container padding-top-5">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
