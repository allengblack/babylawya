@model babylawya.Models.Entities.Document

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div class="container-fluid padding-bottom-5 padding-top-5">
    <h2>Confirm delete</h2>

    <h3>Are you sure you want to delete this document?</h3>
    <div>
        <h4>@Model.Name</h4>
            
        <a asp-controller="Documents" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">Delete</a> |

        <a asp-action="Index">Back to List</a>

    </div>
</div>