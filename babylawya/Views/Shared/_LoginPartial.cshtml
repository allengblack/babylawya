@using Microsoft.AspNetCore.Identity
@using babylawya.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div id="bs-example-navbar-collapse-2" class="navbar-collapse collapse login-partial">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                </li>
            </ul>
        </form>
        <hr />
    </div>
}
else
{
    <div id="bs-example-navbar-collapse-2" class="" navbar-collapse collapse login-partial">
        <div class="navbar-collapse">
            <ul class="nav navbar-nav navbar-right nav-link">
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Register">SIGN UP</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Login">SIGN IN</a>
                </li>
            </ul>
        </div>
        <hr />
    </div>
}
