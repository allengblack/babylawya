@using Microsoft.AspNetCore.Identity
@using babylawya.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!-- Brand and toggle get grouped for better mobile display -->

@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" class="img-responsive">
        </a>
        
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <ul class="nav navbar-nav navbar-right">
                <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Profile">Hello, @UserManager.GetUserName(User)!</a></li>
                <li class="border">|</li>
                <li><button type="submit" class="btn btn-link" style="color: #fff; padding-top: 13px;">Log out</button></li>
            </ul>
        </form>
    </div>
}
else
{
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">
            <img src="~/images/logo.png" class="img-responsive">
        </a>
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Account" asp-action="Register">SIGN UP</a></li>
            <li class="border">|</li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">SIGN IN</a></li>
        </ul>
    </div>
}

<hr class="header-line">